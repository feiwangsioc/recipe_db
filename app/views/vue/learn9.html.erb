<div id="myApp">
  <p>  Switch's original price {{price}}, with tax is {{priceInTax}}, transfer to rmb: {{priceChinaRMB}}</p>
  <button @click="btnClick(10000)"> add 10000 </button>
</div>

<script>
  var myApp = new Vue({
    el: '#myApp',
    data: {
      price: 0,
      priceInTax: 0,
      priceChinaRMB: 0,
    },
    
    watch: {
      price: function(newVal, oldVal){
        console.log(newVal, oldVal);
        this.priceInTax = Math.round(this.price * 1.08 );
        this.priceChinaRMB = Math.round(this.priceInTax / 16.75);
      },
    },
    methods: {
      btnClick: function(newPrice){
        this.price += newPrice;
      },
    },
  });
  myApp.price = 29980;
</script>